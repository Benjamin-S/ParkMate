@model CreateBookingViewModel

@* Booking Modal Popup *@
<div class="modal" tabindex="-1" role="dialog" id="bookingModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="MyBookings" asp-action="ConfirmBooking" id="createBookingForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Book a Parking Space</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Start">Start Date</label>
                        <input asp-for="BookingPeriod.Start" type="datetime-local" id="Start" class="form-control"/>
                        <span asp-validation-for="BookingPeriod.Start"></span>
                    </div>
                    <div class="form-group">
                        <label for="End">End Date</label>
                        <input asp-for="BookingPeriod.End" type="datetime-local" id="End" class="form-control"/>
                        <span asp-validation-for="BookingPeriod.End"></span>
                    </div>
                    <div class="form-group">
                        <label for="vehicle-select">Vehicle</label>
                        <select asp-for="VehicleId" class="form-control" id="vehicle-select">
                        </select>
                        <span asp-validation-for="VehicleId"></span>
                    </div>
                </div>
                <div class="form-group" hidden>
                    <input id="parkingSpaceId" asp-for="ParkingSpaceId" class="form-control"/>
                    <input id="rate" asp-for="BookingPeriod.Rate" class="form-control"/>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
